<LoginScreen>:
    orientation: "vertical"
    padding: 40
    spacing: 20
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.97, 1  # Fondo gris claro
        Rectangle:
            pos: self.pos
            size: self.size
    
    # Espaciador superior
    Widget:
        size_hint_y: 0.3
    
    # Título de la aplicación
    Label:
        text: "Sistema de Distribuidora"
        font_size: 36
        size_hint_y: None
        height: 60
        bold: True
        color: 0.2, 0.2, 0.2, 1
    
    Label:
        text: "Iniciar Sesión"
        font_size: 24
        size_hint_y: None
        height: 40
        color: 0.4, 0.4, 0.4, 1
    
    # Espaciador
    Widget:
        size_hint_y: 0.1
    
    # Contenedor para los campos de entrada
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        size_hint_y: None
        height: 220
        padding: [20, 0, 20, 0]
        
        # Campo de usuario
        BoxLayout:
            orientation: "vertical"
            spacing: 5
            size_hint_y: None
            height: 70
            
            Label:
                text: "Usuario:"
                font_size: 16
                size_hint_y: None
                height: 25
                text_size: self.size
                halign: "left"
                color: 0.2, 0.2, 0.2, 1
            
            TextInput:
                id: usuario_input
                hint_text: "Ingrese su usuario"
                font_size: 16
                size_hint_y: None
                height: 40
                multiline: False
                padding: [10, 10]
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                hint_text_color: 0.5, 0.5, 0.5, 1
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1
        
        # Campo de contraseña
        BoxLayout:
            orientation: "vertical"
            spacing: 5
            size_hint_y: None
            height: 70
            
            Label:
                text: "Contraseña:"
                font_size: 16
                size_hint_y: None
                height: 25
                text_size: self.size
                halign: "left"
                color: 0.2, 0.2, 0.2, 1
            
            TextInput:
                id: password_input
                hint_text: "Ingrese su contraseña"
                font_size: 16
                size_hint_y: None
                height: 40
                multiline: False
                password: True
                padding: [10, 10]
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                hint_text_color: 0.5, 0.5, 0.5, 1
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1
    
    # Mensaje de error/éxito
    Label:
        id: mensaje_label
        text: ""
        font_size: 14
        size_hint_y: None
        height: 30
        color: 1, 0, 0, 1
        text_size: self.size
        halign: "center"
    
    # Espaciador
    Widget:
        size_hint_y: 0.1
    
    # Botón de login
    Button:
        text: "Iniciar Sesión"
        font_size: 18
        size_hint_y: None
        height: 50
        size_hint_x: 0.6
        pos_hint: {"center_x": 0.5}
        color: 1, 1, 1, 1
        on_press: root.validar_login(usuario_input.text, password_input.text)
        canvas.before:
            Color:
                rgba: 0.2, 0.6, 0.9, 1  # Azul
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [8]
    
    # Espaciador inferior
    Widget:
        size_hint_y: 0.2
