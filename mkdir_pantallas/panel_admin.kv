<PanelAdminScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.9, None
            height: self.minimum_height
            spacing: dp(25)
            padding: dp(30)
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.97, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Panel de Administrador"
                font_size: dp(32)
                bold: True
                color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: dp(60)

            Label:
                text: "Desde aquí puedes gestionar usuarios y módulos del sistema"
                font_size: dp(18)
                color: 0.3, 0.3, 0.3, 1
                halign: 'center'
                text_size: self.size

            Widget:
                size_hint_y: 0.1

            # ---------------------------
            # Botón: Crear Usuario
            # ---------------------------
            Button:
                text: "Crear Usuario"
                size_hint: (0.6, None)
                height: dp(50)
                pos_hint: {"center_x": 0.5}
                on_release: root.ir_a_crear_usuario()
                font_size: dp(18)
                canvas.before:
                    Color:
                        rgba: 0.2, 0.6, 0.9, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

            # ---------------------------
            # Botón: Agregar Producto
            # ---------------------------
            Button:
                text: "Agregar Producto"
                size_hint: (0.6, None)
                height: dp(50)
                pos_hint: {"center_x": 0.5}
                on_release: root.ir_a_agregar_producto()
                font_size: dp(18)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.7, 0.4, 1   # verde para diferenciarlo
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

            Widget:
                size_hint_y: 0.1

            # ---------------------------
            # Botón: Volver al Login
            # ---------------------------
            Button:
                text: "Volver al Login"
                size_hint: (0.4, None)
                height: dp(45)
                pos_hint: {"center_x": 0.5}
                font_size: dp(16)
                on_release: root.volver_al_login()
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]
