<CrearUsuarioScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.9, None
            height: self.minimum_height
            spacing: dp(20)
            padding: dp(30)

            Label:
                text: "Crear nuevo usuario"
                font_size: dp(30)
                bold: True
                color: 0.2, 0.2, 0.2, 1

            TextInput:
                id: usuario_input
                hint_text: "Nombre de usuario"
                size_hint_y: None
                height: dp(45)
                multiline: False

            TextInput:
                id: password_input
                hint_text: "Contrase√±a"
                size_hint_y: None
                height: dp(45)
                multiline: False
                password: True

            TextInput:
                id: rol_input
                hint_text: "Rol (ej: Empleado, Vendedor)"
                size_hint_y: None
                height: dp(45)
                multiline: False

            Label:
                id: mensaje_label
                text: ""
                font_size: dp(14)
                size_hint_y: None
                height: dp(25)
                color: 1, 0, 0, 1
                halign: 'center'
                text_size: self.size

            Button:
                text: "Crear Usuario"
                size_hint: (0.5, None)
                height: dp(50)
                pos_hint: {"center_x": 0.5}
                font_size: dp(18)
                on_release: root.validar_admin()
                canvas.before:
                    Color:
                        rgba: 0.2, 0.6, 0.9, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

            Button:
                text: "Volver al Login"
                size_hint: (0.4, None)
                height: dp(45)
                pos_hint: {"center_x": 0.5}
                font_size: dp(16)
                on_release: root.volver_al_login()
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]
